{% extends 'base.html.twig' %}

{% block title %}Détails de la Demande{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">Détails de la Demande</h1>

        <div class="card">
            <div class="card-header">
                <h3>Demande #{{ demande.id }}</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ demande.id }}</td>
                        </tr>
                        <tr>
                            <th>Contenu</th>
                            <td>{{ demande.contenu }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_demande_index') }}" class="btn btn-secondary">Retour à la liste</a>
                    <a href="{{ path('app_demande_edit', {'id': demande.id}) }}" class="btn btn-primary">Modifier la demande</a>
                    {{ include('demande/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
