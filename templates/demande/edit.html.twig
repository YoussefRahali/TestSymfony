{% extends 'base.html.twig' %}

{% block title %}Edit Demande{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Modifier la Demande</h1>

        <div class="card">
            <div class="card-header">
                <h3>Modifier les détails de la Demande</h3>
            </div>
            <div class="card-body">
                <!-- Formulaire d'édition de la Demande -->
                {{ include('demande/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
            </div>

            <div class="card-footer d-flex justify-content-between">
                <!-- Lien pour revenir à la liste des demandes -->
                <a href="{{ path('app_demande_index') }}" class="btn btn-secondary">Retour à la liste</a>

                <!-- Formulaire de suppression -->
                {{ include('demande/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}