{% extends 'base.html.twig' %}

{% block title %}Liste des Demandes{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">Liste des Demandes</h1>

        <div class="card-footer text-center">
            <a href="{{ path('app_demande_new') }}" class="btn btn-success">Créer une nouvelle demande</a>
        </div>
        <div class="card">
            <div class="card-header text-center">
                <h3>Mes Demandes</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Contenu</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for demande in demandes %}
                        <tr>
                            <td>{{ demande.id }}</td>
                            <td>{{ demande.contenu }}</td>
                            <td class="text-center">
                                <a href="{{ path('app_demande_show', {'id': demande.id}) }}" class="btn btn-sm btn-info">Voir</a>
                                <a href="{{ path('app_demande_edit', {'id': demande.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                                {{ include('demande/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center">Aucune demande trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
