{% extends 'base.html.twig' %}

{% block title %}Modifier l'Événement{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">Modifier l'Événement</h1>

        <div class="card">
            <div class="card-header">
                <h3>Éditez les informations de l'Événement</h3>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Nom de l'Événement</th>
                            <td>
                                {{ form_widget(form.nomEv, { 'attr': { 'class': 'form-control', 'placeholder': 'Nom de l\'événement' } }) }}
                                {% if form.nomEv.vars.errors|length > 0 %}
                                    <div class="text-danger">
                                        {{ form_errors(form.nomEv) }}
                                    </div>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>
                                {{ form_widget(form.descriptionEv, { 'attr': { 'class': 'form-control', 'placeholder': 'Description de l\'événement' } }) }}
                                {% if form.descriptionEv.vars.errors|length > 0 %}
                                    <div class="text-danger">
                                        {{ form_errors(form.descriptionEv) }}
                                    </div>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Date de l'Événement</th>
                            <td>
                                {{ form_widget(form.dateEv, { 'attr': { 'class': 'form-control', 'placeholder': 'Date de l\'événement' } }) }}
                                {% if form.dateEv.vars.errors|length > 0 %}
                                    <div class="text-danger">
                                        {{ form_errors(form.dateEv) }}
                                    </div>
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>

                <button class="btn btn-primary mt-3">{{ button_label|default('Enregistrer les modifications') }}</button>
                {{ form_end(form) }}

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_evenement_index') }}" class="btn btn-secondary">Retour à la liste</a>
                    {{ include('evenement/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
