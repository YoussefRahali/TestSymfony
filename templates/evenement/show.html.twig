{% extends 'base.html.twig' %}

{% block title %}Détails de l'Événement{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">Détails de l'Événement</h1>

        <div class="card">
            <div class="card-header">
                <h3>{{ evenement.nomEv }}</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ evenement.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom de l'Événement</th>
                            <td>{{ evenement.nomEv }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ evenement.descriptionEv }}</td>
                        </tr>
                        <tr>
                            <th>Date de l'Événement</th>
                            <td>{{ evenement.dateEv|date('d-m-Y H:i') }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_evenement_index') }}" class="btn btn-secondary">Retour à la liste</a>
                    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-primary">Modifier l'événement</a>
                    {{ include('evenement/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
